{
  "name": "tossface-figma-plugin",
  "version": "0.1.1",
  "description": "An unofficial figma plugin for TossFace",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "typecheck": "tsc && tsc -p ./main",
    "vite:ui": "vite -c ./vite.ui.config.ts",
    "vite:plugin": "vite -c ./vite.plugin.config.ts",
    "dev": "pnpm run --stream '/^dev:.*/'",
    "dev:ui": "pnpm vite:ui dev",
    "dev:plugin": "pnpm vite:plugin build --watch --mode=dev",
    "build": "pnpm run '/^build:.*/'",
    "build:ui": "pnpm vite:ui build",
    "build:plugin": "pnpm vite:plugin build",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json}'",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.23",
    "@toss/use-overlay": "^1.3.8",
    "emoji-regex": "^10.3.0",
    "emojibase-data": "^15.3.2",
    "es-toolkit": "^1.15.1",
    "framer-motion": "^11.3.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.13.0"
  },
  "devDependencies": {
    "@commitlint/types": "^18.4.3",
    "@figma/plugin-typings": "^1.50.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^4.3.1",
    "commitlint": "^18.4.3",
    "commitlint-config-gitmoji": "^2.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-compile-time": "^0.2.1",
    "vite-plugin-generate-file": "^0.2.0",
    "vite-plugin-singlefile": "^2.0.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write"
    ]
  }
}
