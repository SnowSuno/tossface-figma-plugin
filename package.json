{
  "name": "tossface-figma-plugin",
  "version": "0.1.1",
  "description": "An unofficial figma plugin for TossFace",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm run '/^build:.*/'",
    "build:main": "esbuild main/code.ts --bundle --outfile=dist/code.js",
    "build:ui": "tsc && vite build",
    "dev": "pnpm run --stream '/^dev:.*/'",
    "dev:main": "pnpm run build:main --watch",
    "dev:ui": "pnpm run build:ui --watch",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json}' "
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.23",
    "@toss/use-overlay": "^1.3.8",
    "emoji-regex": "^10.3.0",
    "emojibase-data": "^15.3.2",
    "es-toolkit": "^1.15.1",
    "framer-motion": "^10.16.14",
    "framer-motion": "^11.3.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.13.0"
  },
  "devDependencies": {
    "@commitlint/types": "^18.4.3",
    "@figma/plugin-typings": "^1.50.0",
    "@types/node": "^22.2.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^4.3.1",
    "commitlint": "^18.4.3",
    "commitlint-config-gitmoji": "^2.3.1",
    "esbuild": "^0.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.7.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-singlefile": "^2.0.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write"
    ]
  }
}
